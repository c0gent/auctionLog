		<input name="Id" type="number" value="{{ or $s.Id "" }}" class="pure-input-1-2" placeholder="Id:" readonly>
	</fieldset>
	<fieldset class="pure-group">
		<input name="ItemName" type="text" value="{{ or $s.ItemName "" }}" class="pure-input-1-2" placeholder="Item Name:">
		<input name="Quality" type="number" value="{{ or $s.Quality "" }}" class="pure-input-1-2" placeholder="Quality:">
